@model Lanthanum.Web.Models.MainPageArticlesViewModel
@{
    ViewData["Title"] = "Home Page";
    var data = Model.MainArticles;
    var additionalData = Model.AdditionalArticles;
}
<style>
    #photo {
        position: absolute;
        width: 814px;
        height: 460px;
        left: 11px;
        top: 83px;
        z-index: -1;
    }

    #photoKindOfSport {
        position: absolute;
        width: 134px;
        height: 39px;
        left: 11px;
        top: 83px;
        background: #2F2F2F;
    }

    #photoKindOfSportText {
        text-align: center;
        margin-top: 10px;
        font-family: Open Sans;
        font-style: normal;
        font-weight: bold;
        font-size: 14px;
        line-height: 19px;
        color: #FFFFFF;
    }

    #photoCard {
        position: absolute;
        width: 421px;
        height: 291px;
        left: 651px;
        top: 169px;
        background: #F6F6F6;
    }

    .dateFormat {
        font-family: Roboto;
        font-style: normal;
        font-weight: normal;
        font-size: 14px;
        line-height: 16px;
        color: #7F7B7B;
    }

    #dateCardPosition {
        position: absolute;
        width: 331px;
        height: 17px;
        left: 44px;
        top: 50px;
    }

    .headerFormat {
        font-family: Open Sans;
        font-style: normal;
        font-weight: 600;
        font-size: 16px;
        line-height: 22px;
        color: #C63638;
    }

    #headerCardPosition {
        position: absolute;
        height: 22px;
        left: 41px;
        top: 86px;
    }

    .articlePartTextFormat {
        font-family: Open Sans;
        font-style: normal;
        font-weight: bold;
        font-size: 22px;
        line-height: 30px;
        color: #2B2F43;
    }

    #articlePartTextCardPosition {
        position: absolute;
        left: 44px;
        right: 14px;
        top: 118px;
        bottom: 83px;
    }

    .moreButton {
        position: absolute;
        width: 175px;
        height: 42px;
        background: #d72130;
        color: white;
        bottom: -291px;
        border: none;
        font-size: 15px;
    }

    #shadow {
        position: absolute;
        width: 312px;
        height: 185px;
        left: 702px;
        top: 291px;
        background: rgba(116, 114, 114, 0.170291);
        box-shadow: 0px 0px 0px rgba(255, 255, 255, 0.266472), inset 0px 1px 3px rgba(0, 0, 0, 0.5);
        filter: blur(35.3377px);
        z-index: -1;
    }

    .circle {
        position: absolute;
        width: 30px;
        height: 30px;
        border-width: 2px;
        border: solid;
        border-color: red;
        border-radius: 50%;
        line-height: 19px;
        text-align: center;
        color: #C63638;
        font-size: 30px;
        cursor: pointer;
    }

    #leftArrow {
        top: 490px;
        left: 861px;
    }

    #rightArrow {
        top: 490px;
        left: 1044px;
    }

    #numberedList {
        position: absolute;
        top: 462px;
        left: 911px;
        width: 110px;
        height: 21px;
        padding-inline-start: 0px;
        font-size: 43px;
        font-weight: bold;
    }

    .activePageNumber {
        color: #C63638 !important;
    }

    #numberedList > li {
        display: inline-block;
        /* You can also add some margins here to make it look prettier */
        zoom: 1;
        *display: inline;
        /* this fix is needed for IE7- */
        color: #B2B2B2;
    }

    #allNote {
        position: absolute;
        width: 223px;
        height: 192px;
        left: -129px;
        top: 23px;
    }

    #newsNote {
        position: absolute;
        width: 343px;
        height: 192px;
        left: 800px;
        top: 600px;
    }

    .backNote {
        font-family: Roboto;
        font-style: normal;
        font-weight: bold;
        font-size: 141px;
        line-height: 192px;
        letter-spacing: 1.25893px;
        color: rgba(204, 211, 224, 0.301628);
        transform: rotate(90deg);
        z-index: -2;
    }


    .additionalNewsItem {
        cursor: pointer;
        position: absolute;
        width: 202px;
        height: 294px;
    }

    .additionalNewsItem:hover {
        background: #FFFFFF;
        box-shadow: 0px 2px 24px rgba(0, 0, 0, 0.110932);
    }

    #firstCardPosition {
        left: 0px;
        top: 574px;
    }

    #secondCardPosition {
        left: 225px;
        top: 574px;
    }

    #thirdCardPosition {
        left: 450px;
        top: 574px;
    }

    #fourthCardPosition {
        left: 675px;
        top: 574px;
    }

    .additionalCardPhoto {
        position: absolute;
        width: 177px;
        height: 128px;
        left: 12px;
        top: 11px;
    }

    .additionalCardHeadline {
        position: absolute;
        left: 12px;
        top: 153px;
        font-style: normal;
        font-weight: bold;
        font-size: 16px;
        line-height: 22px;
        color: #2B2F43;
    }

    .additionalCardText {
        position: absolute;
        font-size: 14px;
        line-height: 19px;
        color: #7F7B7B;
        top: 179px;
        left: 12px;
    }
</style>

<div>
    <div id="allNote" class="backNote">ALL</div>
    <div id="newsNote" class="backNote">NEWS</div>

    <div id="photoKindOfSport">
        <p id="photoKindOfSportText">NBA</p>
    </div>

    <div class="slide" data-ride="carousel">
    <div id="photo" class="carousel-inner main-carousel">
        <div class="carousel-item active">
            <img class="d-block w-100" src=@data[0].LogoPath>
        </div>
        @for (int i = 1; i < data.Count; i++)
        {
            <div class="carousel-item">
                <img class="d-block w-100" src=@data[i].LogoPath>
            </div>
        }
    </div>
    </div>

    <div id="shadow"></div>

    <div data-interval="false">
        <div id="photoCard" class="carousel-inner additional-carousel">
            <div class="carousel-item active">
                <div>
                    <p id="dateCardPosition" class="dateFormat">Published / @data[0].DateTimeOfCreation.ToString("dd.MM.yyyy")</p>
                    <p id="headerCardPosition" class="headerFormat">@data[0].Headline</p>
                    <p id="articlePartTextCardPosition" class="articlePartTextFormat">@data[0].MainText</p>
                    <button class="moreButton">More</button>
                </div>
            </div>
            @for (int i = 1; i < data.Count; i++)
            {
                <div class="carousel-item">
                    <div>
                        <p id="dateCardPosition" class="dateFormat">Published / @data[i].DateTimeOfCreation.ToString("dd.MM.yyyy")</p>
                        <p id="headerCardPosition" class="headerFormat">@data[i].Headline</p>
                        <p id="articlePartTextCardPosition" class="articlePartTextFormat">@data[i].MainText</p>
                        <button class="moreButton">More</button>
                    </div>
                </div>
            }
        </div>
    </div>

    <div>
        <div id="leftArrow" class="circle">&laquo;</div>
        <ul id="numberedList" data-tag="articleNumberList">
            <li class="activePageNumber" onclick="switchMainArticle(this)">01</li>
            <li onclick="switchMainArticle(this)">02</li>
            <li onclick="switchMainArticle(this)">03</li>
            <li onclick="switchMainArticle(this)">04</li>
        </ul>

        <div id="rightArrow" class="circle">&raquo;</div>
    </div>


    <!-- Additional cards -->
    <div id="firstCardPosition" class="additionalNewsItem">
        <img class="additionalCardPhoto" src=@additionalData[0].LogoPath>
        <p class="additionalCardHeadline">@additionalData[0].Headline</p>
        <p class="additionalCardText">@additionalData[0].MainText</p>
    </div>
    <div id="secondCardPosition" class="additionalNewsItem">
        <img class="additionalCardPhoto" src=@additionalData[1].LogoPath>
        <p class="additionalCardHeadline">@additionalData[1].Headline</p>
        <p class="additionalCardText">@additionalData[1].MainText</p>
    </div>
    <div id="thirdCardPosition" class="additionalNewsItem">
        <img class="additionalCardPhoto" src=@additionalData[2].LogoPath>
        <p class="additionalCardHeadline">@additionalData[2].Headline</p>
        <p class="additionalCardText">@additionalData[2].MainText</p>
    </div>
    <div id="fourthCardPosition" class="additionalNewsItem">
        <img class="additionalCardPhoto" src=@additionalData[3].LogoPath>
        <p class="additionalCardHeadline">@additionalData[3].Headline</p>
        <p class="additionalCardText">@additionalData[3].MainText</p>
    </div>
</div>