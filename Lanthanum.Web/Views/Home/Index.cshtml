@using Lanthanum.Web.Controllers

@{
    ViewData["Title"] = "Home Page";
    var data = MainPageArticlesController.GetMainArticles();
}
<style>
    #photo {
        position: absolute;
        width: 814px;
        height: 460px;
        left: 0px;
        top: 83px;
        z-index: -1;
    }

    #photoKindOfSport {
        position: absolute;
        width: 134px;
        height: 39px;
        left: 0px;
        top: 83px;
        background: #2F2F2F;
    }

    #photoKindOfSportText {
        text-align: center;
        margin-top: 10px;
        font-family: Open Sans;
        font-style: normal;
        font-weight: bold;
        font-size: 14px;
        line-height: 19px;
        color: #FFFFFF;
    }

    #photoCard {
        position: absolute;
        width: 421px;
        height: 291px;
        left: 640px;
        top: 169px;
        background: #F6F6F6;
    }

    .dateFormat {
        font-family: Roboto;
        font-style: normal;
        font-weight: normal;
        font-size: 14px;
        line-height: 16px;
        color: #7F7B7B;
    }

    #dateCardPosition {
        position: absolute;
        width: 331px;
        height: 17px;
        left: 33px;
        top: 50px;
    }

    .headerFormat {
        font-family: Open Sans;
        font-style: normal;
        font-weight: 600;
        font-size: 16px;
        line-height: 22px;
        color: #C63638;
    }

    #headerCardPosition {
        position: absolute;
        height: 22px;
        left: 33px;
        top: 86px;
    }

    .articlePartTextFormat {
        font-family: Open Sans;
        font-style: normal;
        font-weight: bold;
        font-size: 22px;
        line-height: 30px;
        color: #2B2F43;
    }

    #articlePartTextCardPosition {
        position: absolute;
        left: 33px;
        right: 14px;
        top: 118px;
        bottom: 83px;
    }

    .moreButton {
        position: absolute;
        width: 175px;
        height: 42px;
        background: #d72130;
        color: white;
        bottom: -291px;
        border: none;
        font-size: 15px;
    }

    #shadow {
        position: absolute;
        width: 312px;
        height: 185px;
        left: 691px;
        top: 291px;
        background: rgba(116, 114, 114, 0.170291);
        box-shadow: 0px 0px 0px rgba(255, 255, 255, 0.266472), inset 0px 1px 3px rgba(0, 0, 0, 0.5);
        filter: blur(35.3377px);
        z-index: -1;
    }

    .circle {
        position: absolute;
        width: 30px;
        height: 30px;
        border-width: 2px;
        border: solid;
        border-color: red;
        border-radius: 50%;
        line-height: 19px;
        text-align: center;
        color: #C63638;
        font-size: 30px;
        cursor: pointer;
    }

    #leftArrow {
        top: 490px;
        left: 850px;
    }

    #rightArrow {
        top: 490px;
        left: 1033px;
    }

    #numberedList {
        position: absolute;
        top: 462px;
        left: 900px;
        width: 110px;
        height: 21px;
        padding-inline-start: 0px;
        font-size: 43px;
        font-weight: bold;
    }

    .activePageNumber {
        color: #C63638 !important;
    }

    #numberedList > li {
        display: inline-block;
        /* You can also add some margins here to make it look prettier */
        zoom: 1;
        *display: inline;
        /* this fix is needed for IE7- */
        color: #B2B2B2;
    }
</style>

<div>
    <div id="photoKindOfSport">
        <p id="photoKindOfSportText">NBA</p>
    </div>

    <!--<div class="slide" data-ride="carousel">-->
    <div data-interval="false">
        <div id="photo" class="carousel-inner main-carousel">
            <div class="carousel-item active">
                <img class="d-block w-100" src=@data[0].LogoPath>
            </div>
            @for (int i = 1; i < data.Count; i++)
            {
                <div class="carousel-item">
                    <img class="d-block w-100" src=@data[i].LogoPath>
                </div>
            }
        </div>
    </div>

    <div id="shadow"></div>

    <div data-interval="false">
        <div id="photoCard" class="carousel-inner additional-carousel">
            <div class="carousel-item active">
                <div>
                    <p id="dateCardPosition" class="dateFormat">Published @data[0].DateTimeOfCreation.ToString("dd.MM.yyyy")</p>
                    <p id="headerCardPosition" class="headerFormat">@data[0].Headline</p>
                    <p id="articlePartTextCardPosition" class="articlePartTextFormat">@data[0].MainText</p>
                    <button class="moreButton">More</button>
                </div>
            </div>
            @for (int i = 1; i < data.Count; i++)
            {
                <div class="carousel-item">
                    <div>
                        <p id="dateCardPosition" class="dateFormat">Published @data[i].DateTimeOfCreation.ToString("dd.MM.yyyy")</p>
                        <p id="headerCardPosition" class="headerFormat">@data[i].Headline</p>
                        <p id="articlePartTextCardPosition" class="articlePartTextFormat">@data[i].MainText</p>
                        <button class="moreButton">More</button>
                    </div>
                </div>
            }
        </div>
    </div>

    <div>
        <div id="leftArrow" class="circle">&laquo;</div>
        <ul id="numberedList" data-tag="articleNumberList">
            <li class="activePageNumber" onclick="switchMainArticle(this)">01</li>
            <li onclick="switchMainArticle(this)">02</li>
            <li onclick="switchMainArticle(this)">03</li>
            <li onclick="switchMainArticle(this)">04</li>
        </ul>

        <div id="rightArrow" class="circle">&raquo;</div>
    </div>
</div>
