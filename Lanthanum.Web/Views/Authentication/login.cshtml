@{
    Layout = "_AuthenticationLayout";
}

<div class="container-fluid">
    <div class="row">
        <!-- IMAGE CONTAINER -->
        <div class="col-lg-6 col-md-6 d-none d-md-block infinity-image-container"></div>
        <!-- IMAGE CONTAINER END -->

        <!-- FORM CONTAINER BEGIN -->
        <div class="col-lg-6 col-md-6 infinity-form-container">
            <div class="fixed-top">
                <div class="header-logo-container">
                    <a href="#" class="header-logo">Sports Hub</a>
                </div>
                <a href="#" class="header-ref float-right">Get Started</a>
                <p class="float-right header-question">Don't have an account ?</p>
            </div>
            <div class="col-lg-9 col-md-12 col-sm-8 col-xs-12 infinity-form">
                <div class="text-left mb-4">
                    <h4>Log in To Sports Hub</h4>
                </div>
                <form class="px-3">
                    <div class="social-network-container">
                        <a href="#" class="fb-img"></a>
                        <a href="#" class="google-img"></a>
                    </div>
                    <div class="plain-line">
                        <div class="float-left">EMAIL ADDRESS</div>
                    </div>
                    <br>
                    <div class="form-input">
                        <input type="email" name="" placeholder="Email@gmail.com" tabindex="10"required>
                    </div>
                    <div class="plain-line">
                        <div class="float-left">
                            PASSWORD
                        </div>
                        <div class="text-right">
                            <a href="reset.html" class="forget-link">Forgot password?</a>
                        </div>
                    </div>
                    <div class="form-input">
                        <input type="password" name="" placeholder="8+ characters(letters and numbers)" required>
                    </div>
                    <div class="mb-3"> 
                        <button type="submit" class="btn btn-block">LOGIN</button>
                    </div>
                </form>
            </div>	
        </div>
        <!--FORM CONTAINER END-->
    </div>
</div>